@model  TrungTamNgoaiNgu.DTO.Dto_ThiSinh_PhieuDangKy
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng ký dự thi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thông tin cá nhân</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2">Họ và tên</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Giới tính</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Ngày sinh</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control datepicker", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Nơi sinh</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoiSinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoiSinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">CMND</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Ngày cấp</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayCap, new { htmlAttributes = new { @class = "form-control datepicker", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgayCap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Nơi cấp</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoiCap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoiCap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">SĐT</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Email</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Đăng ký thi</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-2">Khóa thi</div>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Id_KhoaThi, ViewBag.ListKhoaThi as SelectList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Trình độ</div>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TrinhDo, new List<SelectListItem>
        {
           new SelectListItem{ Text="A2", Value = "A2" },
           new SelectListItem{ Text="B1", Value = "B1" },

        }, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Đăng ký" class="btn btn-default" />
        </div>
    </div>

</div>
}